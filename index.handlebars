<h1>Burgers!</h1>

<h2>HUNGRY PEOPLE!</h2>

<ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{> burgers/burger-block hungry=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>People that are hungry!</h2>

<ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> burgers/burger-block hungry-false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="hun" name="name">
  </div>

  <div class="form-group">
    <label for="hun">Hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> Devour!<br>
    <input type="radio" name="hungry" value="0"> Full
  </div>

  <button type="submit">Add Burger</button>
</form>
